# Run the container with `docker run -p 3000:3000 -t my-app-my-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system my-app-my-app && \
          adduser --system -G my-app-my-app my-app-my-app

COPY apps/my-app/dist my-app-my-app/
